<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Age -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Age"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Sex -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sex"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Sex (1 = Male, 0 = Female)"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Chest Pain Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chest Pain Type"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/cp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Chest Pain Type (0-3)"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Resting Blood Pressure -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resting Blood Pressure"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/trtbps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Blood Pressure"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Cholesterol -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cholesterol"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/chol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Cholesterol Level"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Fasting Blood Sugar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fasting Blood Sugar"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/fbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Fasting Blood Sugar (1 = True, 0 = False)"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Resting ECG -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resting ECG"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/restecg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Resting ECG (0, 1, or 2)"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Max Heart Rate -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Heart Rate"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/thalachh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Max Heart Rate Achieved"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Exercise Induced Angina -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise Induced Angina"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/exng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Exercise Induced Angina (1 = Yes, 0 = No)"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- ST Depression -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ST Depression"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/oldpeak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter ST Depression Value"
                    android:inputType="numberDecimal"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Slope of ST Segment -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slope of ST Segment"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/slp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Slope of Peak Exercise ST Segment"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Number of Major Vessels -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Major Vessels"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/caa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Number of Major Vessels (0-3)"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Thalassemia -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thalassemia"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/thall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Thalassemia (0, 1, 2, or 3)"
                    android:inputType="number"
                    android:backgroundTint="#CCCCCC"
                    android:layout_marginBottom="12dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
